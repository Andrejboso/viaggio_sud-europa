    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggler = document.querySelector('.navbar-toggler');
            const collapse = document.querySelector('.navbar-collapse');
            const navLinks = document.querySelectorAll('.nav-link');

            // Toggle logic for hamburger menu
            if (toggler && collapse) {
                toggler.addEventListener('click', function() {
                    collapse.classList.toggle('show');
                    toggler.classList.toggle('open');
                    const isExpanded = collapse.classList.contains('show');
                    toggler.setAttribute('aria-expanded', isExpanded);
                });

                // Close menu when a navigation link is clicked (on mobile)
                navLinks.forEach(link => {
                    link.addEventListener('click', () => {
                        if (window.innerWidth <= 992 && collapse.classList.contains('show')) {
                            collapse.classList.remove('show');
                            toggler.classList.remove('open');
                            toggler.setAttribute('aria-expanded', 'false');
                        }
                    });
                });

                // Handle window resize for responsiveness
                let resizeTimeout;
                window.addEventListener('resize', () => {
                    clearTimeout(resizeTimeout);
                    resizeTimeout = setTimeout(() => {
                        if (window.innerWidth > 992 && collapse.classList.contains('show')) {
                            collapse.classList.remove('show');
                            toggler.classList.remove('open');
                            toggler.setAttribute('aria-expanded', 'false');
                        }
                    }, 250);
                });
            } else {
                console.error("Navbar toggler or collapse element not found. Check your HTML structure.");
            }

            // Active link highlighting based on current URL path
            const currentPath = window.location.pathname;
            navLinks.forEach(link => {
                // Remove trailing slash from both for consistent comparison
                const linkPath = link.getAttribute('data-path').replace(/\/$/, '');
                const cleanedCurrentPath = currentPath.replace(/\/$/, '');

                if (linkPath === cleanedCurrentPath ||
                    (linkPath === '/home' && cleanedCurrentPath === '/') || // Special case for home page
                    (linkPath === '/home' && cleanedCurrentPath === '/index.html')) // Handle index.html if applicable
                {
                    link.classList.add('active');
                } else {
                    link.classList.remove('active');
                }
            });
        });
